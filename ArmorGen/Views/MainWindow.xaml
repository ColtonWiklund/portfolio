<Window x:Class="ArmorGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmorGen"
        mc:Ignorable="d"
        Title="ArmorGen" Height="550" Width="750" Background="#FFBABABA">

    <Window.Resources>
        <Style x:Key="GridLeftMargin" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="10 0 0 0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="275"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!--Armor Information-->
        <StackPanel 
            Grid.Column="0" 
            Grid.Row="0" 
            Margin="20" 
            Orientation="Vertical">

            <!--Name-->
            <StackPanel Orientation="Horizontal">
                <Button 
                    Width="46" 
                    Background="#FFA9F4A8" 
                    Command="{Binding CreateNewItemCommand}" 
                    ToolTip="Create New Item">
                    
                    <TextBlock 
                        Text="+" 
                        Margin="0 -7 0 0" 
                        FontSize="35" 
                        FontWeight="Black" 
                        Foreground="Green" 
                        IsHitTestVisible="False"/>
                </Button>
                
                <StackPanel 
                    Width="400" 
                    Margin="13 0 0 0" 
                    HorizontalAlignment="Left">
                    
                    <TextBlock 
                        Text="Name" 
                        FontSize="14" 
                        FontWeight="SemiBold"/>
                    
                    <TextBox
                        Text="{Binding ArmorName, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0 5 60 0" 
                        FontSize="14"/>
                </StackPanel>
            </StackPanel>

            <!--Common Properties-->
            <Grid Margin="0 10 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label 
                    Content="Slot" 
                    Grid.Row="0" 
                    Grid.Column="0"/>
                <Label 
                    Content="Armor Class" 
                    Grid.Row="0" 
                    Grid.Column="1" 
                    Style="{StaticResource GridLeftMargin}"/>
                <Label 
                    Content="Quality" 
                    Grid.Row="0" 
                    Grid.Column="2" 
                    Style="{StaticResource GridLeftMargin}"/>
                <Label 
                    Content="Binding" 
                    Grid.Row="0" 
                    Grid.Column="3" 
                    Style="{StaticResource GridLeftMargin}"/>

                <!--ComboBoxes-->
                <ComboBox 
                    ItemsSource="{Binding SlotOptions}" 
                    SelectedItem="{Binding SelectedSlot}" 
                    Grid.Row="1" 
                    Grid.Column="0"/>
                <ComboBox 
                    ItemsSource="{Binding ArmorClassOptions}" 
                    SelectedItem="{Binding SelectedArmorClass}" 
                    Grid.Row="1" 
                    Grid.Column="1" 
                    Style="{StaticResource GridLeftMargin}"/>
                <ComboBox 
                    ItemsSource="{Binding QualityOptions}" 
                    SelectedItem="{Binding SelectedQuality}" 
                    Grid.Row="1" 
                    Grid.Column="2" 
                    Style="{StaticResource GridLeftMargin}"/>
                <ComboBox 
                    ItemsSource="{Binding BindingOptions}" 
                    SelectedItem="{Binding SelectedBinding}" 
                    Grid.Row="1" 
                    Grid.Column="3" 
                    Style="{StaticResource GridLeftMargin}"/>
            </Grid>

            <!--Character Attribute Values-->
            <TextBlock Text="Character Attributes" FontSize="14" FontWeight="SemiBold"/>
            <StackPanel Margin="0 5 0 0">
                <ItemsControl ItemsSource="{Binding CharacterAttributes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0 3 0 3">
                                <TextBlock 
                                    Height="20" 
                                    Width="100" 
                                    Text="{Binding Name}" 
                                    VerticalAlignment="Center"/>

                                <TextBox 
                                    Height="20" 
                                    Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="50" 
                                    Margin="6 0" 
                                    VerticalAlignment="Center" 
                                    TextAlignment="Center" />
                                
                                <Button 
                                    Height="20"
                                    Width="20"
                                    Content="✖"
                                    FontSize="8"
                                    Background="DarkRed"
                                    Foreground="White"
                                    Command="{Binding DataContext.RemoveCharacterAttributeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                    CommandParameter="{Binding}"
                                    ToolTip="Remove Attribute"
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center" 
                                    KeyboardNavigation.IsTabStop="False" />
                                
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!--Add New Character Attributes-->
            <StackPanel Margin="0 8 0 20" >
                <ItemsControl ItemsSource="{Binding CharacterAttributeGroups}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid 
                                Width="94"
                                Height="25"
                                Margin="0 0 8 0">   
                                
                                <ComboBox 
                                    ItemsSource="{Binding Attributes}" 
                                    SelectedItem="{Binding SelectedAttribute, Mode=TwoWay}">
                                    
                                    <ComboBox.Resources>
                                        <!-- Hide the selected item text in the combo box (easier than overriding the combo box value to null after a selection) -->
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Opacity" Value="0" />
                                        </Style>
                                    </ComboBox.Resources>
                                </ComboBox>
                                
                                <TextBlock 
                                    Text="{Binding GroupName}" 
                                    Margin="6 4 0 4" 
                                    IsHitTestVisible="False" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>

        <!--Exporting-->
        <StackPanel 
            Margin="20" 
            Grid.Column="0" 
            Grid.Row="1" 
            Grid.ColumnSpan="2">
            
            <TextBlock 
                Text="Export" 
                FontSize="14" 
                FontWeight="SemiBold" 
                Margin="0 0 0 10" />
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>

                <Button 
                    Content="Export to JSON"
                    Command="{Binding ExportToJsonCommand}"
                    IsEnabled="{Binding IsJsonExportEnabled}"
                    Width="140"
                    HorizontalAlignment="Left"
                    Grid.Column="0" />

                <Button 
                    Content="Open Export Directory"
                    Command="{Binding OpenExportDirectoryCommand}"
                    Width="140"
                    HorizontalAlignment="Left"
                    Grid.Column="1" />

                <Button 
                    Content="Select Export Directory"
                    Command="{Binding SelectExportDirectoryCommand}"
                    Width="140"
                    HorizontalAlignment="Left"
                    Grid.Column="2" />
            </Grid>
        </StackPanel>

        <!--Armor Preview-->
        <Grid Margin="0 20" Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border 
                Margin="10"
                Padding="12"
                Background="#FFA3A3A3"
                BorderBrush="#FFD4D4D4"
                BorderThickness="1"
                CornerRadius="5">

                <StackPanel>
                    <TextBlock 
                        Text="{Binding ArmorName}"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Foreground="{Binding ArmorNameColor}"
                        TextWrapping="Wrap" />
                    
                    <TextBlock Text="{Binding SelectedBinding}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Text="{Binding SelectedSlot}" 
                            Grid.Column="0" />

                        <TextBlock 
                            Text="{Binding SelectedArmorClass}" 
                            Grid.Column="1"
                            HorizontalAlignment="Right" />
                    </Grid>
                    <ItemsControl ItemsSource="{Binding FormattedCharacterAttributes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
